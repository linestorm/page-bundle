{% extends 'LineStormCmsBundle:Admin:index.html.twig' %}

{% block page_title %}
    Pages
{% endblock %}

{% block page_desc %}
    Defined endpoint nodes in your CMS
{% endblock %}

{% block module %}
    <a class="btn btn-success" href="{{ url('linestorm_cms_module_page_admin_page_create') }}">
        <i class="fa-plus"></i> New Page
    </a>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Page</th>
                    <th>Slug</th>
                    <th>Route</th>
                    <th>Blurb</th>
                    <th>Tags</th>
                </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td><a href="{{ url('linestorm_cms_module_page_admin_page_edit', {id: page.id}) }}">{{ page.title }}</a></td>
                    <td><a href="{{ url(page_route(page.route)) }}" target="_blank">{{ page.slug }}</a></td>
                    <td>{{ page_route(page.route) }}</td>
                    <td>{{ page.blurb }}</td>
                    <td>{{ include('LineStormTagComponentBundle::view.html.twig', {content: page.tags}) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
