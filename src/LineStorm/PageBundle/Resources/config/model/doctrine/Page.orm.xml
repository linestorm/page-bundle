<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd" >
  <mapped-superclass name="LineStorm\PageBundle\Model\Page" table="page">

    <field name="title" type="string" column="title" length="150" precision="0" scale="0" nullable="false" />
    <field name="createdOn" type="datetime" column="created_on" precision="0" scale="0" nullable="false"/>
    <field name="editedOn" type="datetime" column="edited_on" precision="0" scale="0" nullable="true"/>
    <field name="liveOn" type="datetime" column="live_on" precision="0" scale="0" nullable="false"/>
    <field name="deletedOn" type="datetime" column="deleted_on" precision="0" scale="0" nullable="true"/>

    <field name="blurb" type="string" column="blurb" length="100" precision="0" scale="0" nullable="true" />
    <field name="slug" type="string" column="slug" length="100" precision="0" scale="0" nullable="true" />
    <field name="route" type="string" column="route" length="100" precision="0" scale="0" nullable="true" />
    <field name="metaDescription" type="string" column="meta_description" length="100" precision="0" scale="0" nullable="true" />
    <field name="metaKeywords" type="string" column="meta_keywords" length="100" precision="0" scale="0" nullable="true" />

  </mapped-superclass>
</doctrine-mapping>
