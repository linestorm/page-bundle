<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="LineStorm\PageBundle\Model\PageType" table="page">

        <field name="name" type="string" column="name" length="150" precision="0" scale="0" nullable="false"/>
        <field name="controller" type="string" column="controller" length="150" precision="0" scale="0" nullable="false"/>
        <field name="action" type="string" column="action" length="150" precision="0" scale="0" nullable="false"/>
        <field name="template" type="string" column="template" length="1500" precision="0" scale="0" nullable="false"/>

        <field name="createdOn" type="datetime" column="created_on" precision="0" scale="0" nullable="false"/>
        <field name="editedOn"  type="datetime" column="edited_on" precision="0" scale="0" nullable="true"/>

    </mapped-superclass>
</doctrine-mapping>
